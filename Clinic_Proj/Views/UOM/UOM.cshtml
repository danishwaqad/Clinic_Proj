
@{
    ViewBag.Title = "UOM";
}

<div ng-app="RegistrationForm" ng-controller="Home">

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Create UOM</h4>
        </div>
        <div class="col-md-7 align-self-center">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Create UOM</li>
                </ol>
            </div>
        </div>
    </div>

    <!--row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div id="UOM_Modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myLargeModalLabel">Select UOM</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-7">

                                    </div>
                                    <div class="col-md-1">
                                        <label for="CompSearch">Search:</label>
                                    </div>
                                    <div class="col-md-4 form-material">
                                        <input type="text" class="form-control" id="UserSearch" ng-model="TxtUOMSearch" />
                                    </div>
                                </div>
                                <div class="table-responsive-sm">
                                    <table class="table-sm table-hover table-bordered text-dark">
                                        <thead>
                                            <tr>
                                                <th>UOM</th>
                                                <th>Short Val</th>
                                                <th>Active</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in dtGetAll | filter:TxtUOMSearch">
                                                <td><button ng-click="GetDataByID(item.UOM)" class="btn btn-link" data-dismiss="modal">{{item.UOM}}</button></td>
                                                <td>{{item.Short_Val}}</td>
                                                <td>{{item.InActive}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <div class="card-header bg-info">
                    <h4 class="m-b-0 text-white">Create UOM</h4>
                </div>
                <div class="card-body">
                    <form name="CreateUOM">
                        <div class="form-body form-group">
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>

                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="UOM_ID">UOM ID:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="UOM_ID" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtUOM_ID" required readonly />
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-info" alt="default" data-toggle="modal" data-target="#UOM_Modal" ng-click="GetAllData()" href="javascript:void(0)"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="Status">Status:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <select class="form-control form-input-grey" ng-model="Status">
                                            <option value="0">Active.</option>
                                            <option value="1">InActive.</option>
                                        </select>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row p-t-20">

                                <!--/span-->
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="UOM">UOM:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="UOM" class="form-control form-input-grey" ng-model="txtUOM" required />
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="ShortVal">Short Value:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="ShortVal" class="form-control form-input-grey" ng-model="txtShortVal" required />
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-3"></div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button ng-click="savedata()" ng-hide="CUSaveBtn" ng-disabled="CreateUOM.$invalid" class="btn btn-outline-success form-control"><i class="fa fa-check"></i>Save</button>
                                        <button ng-click="On_Update()" ng-hide="CUUpdateBtn" ng-disabled="CreateUOM.$invalid" class="btn btn-outline-success form-control"><i class="fa fa-check"></i>Update</button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button ng-click="On_Clear()" class="btn btn-outline-warning form-control"><i class="icon-refresh"></i> Clear </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button ng-disabled="CreateUOM.$invalid" ng-click="OnDelete()" class="btn btn-outline-danger form-control"><i class="icon-trash"></i>Delete</button>
                                    </div>
                                </div>
                                <div class="col-md-3"></div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- Row -->
</div>
@section scripts {

    <script>

        var RegistrationForm = angular.module("RegistrationForm", []);
        RegistrationForm.controller("Home", function ($scope, $http) {
            $scope.Notification = function (Type, Heading, Test) {
                //info, warning, success, error
                $.toast({
                    heading: Heading,
                    text: Test,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: Type,
                    hideAfter: 3500,
                    stack: 6
                });
            };
            //===========Display All UOM Data by lookup=============
            $scope.GetAllData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/UOM/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {

                    $scope.dtGetAll = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //============Delete UOM===============
            $scope.OnDelete = function () {
                var displayReq = {
                    method: "POST",
                    url: "/UOM/OnDelete",
                    data: {
                        ID: $scope.txtUOM_ID
                    }
                }
                $http(displayReq).then(function (Return) {
                    $scope.On_Clear();
                    if (Return.data == "Delete") {
                        $scope.Notification('success', 'Operation Completed', 'Delete UOM');
                    }
                    else {
                        $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                    }
                }, function myError(Return) {
                    $scope.On_Clear();
                    $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
                });

            };
            //=============UOM Get Data By ID=================
            $scope.GetDataByID = function (UOM) {
                var displayReq = {
                    method: "POST",
                    url: "/UOM/Get_databyid",
                    data: {
                        id: UOM
                    }
                }
                $http(displayReq).then(function (Return) {

                    var dt = angular.fromJson(Return.data);

                    if (dt.length > 0) {
                        $scope.txtUOM_ID = dt[0].CCPL_ROW_ID;
                        $scope.Status = dt[0].InActive;
                        if ($scope.Status == true)
                        {
                            $scope.Status = '1';
                        }
                        else if ($scope.Status == false)
                        {
                            $scope.Status = '0';
                        }
                        $scope.txtUOM = dt[0].UOM;
                        $scope.txtShortVal = dt[0].Short_Val;

                        $scope.CUSaveBtn = true;
                        $scope.CUUpdateBtn = false;
                    }
                    else {
                        $scope.CUSaveBtn = false;
                        $scope.CUUpdateBtn = true;

                        $scope.txtUOM_ID = '';
                        $scope.Status = 'Active';
                        $scope.txtUOM = '';
                        $scope.txtShortVal = '';
                    }

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //==============UOM Data Insert==================
            $scope.savedata = function () {
                if ($scope.Status == 1)
                {
                 $scope.Status = true;
                }
                else if ($scope.Status == 0)
                {
                 $scope.Status = false;
                }
                var displayReq = {
                    method: 'POST',
                    url: '/UOM/Add_UOM',
                    data:
                    {
                        UOM_ID:$scope.txtUOM_ID,
                        Status:$scope.Status,
                        UOM:$scope.txtUOM,
                        Shor_Val:$scope.txtShortVal
                    }
                }
                $http(displayReq).then(function (Return) {
                  $scope.On_Clear();
              if (Return.data == "Inserted") {
              $scope.Notification('success', 'Operation Completed', 'Insert UOM');
                       }
              else {
                $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                   }
                }, function myError(Return) {
                        $scope.On_Clear();
             $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
              });
            };
            //===============UOM Data Update=============
            $scope.On_Update = function () {
                if ($scope.Status == 1)
                {
                 $scope.Status = true;
                }
                else if ($scope.Status == 0)
                {
                 $scope.Status = false;
                }
                var displayReq = {
                    method: "POST",
                    url: "/UOM/update_record",
                    data: {
                        UOM_ID:$scope.txtUOM_ID,
                        Status:$scope.Status,
                        UOM:$scope.txtUOM,
                        Shor_Val:$scope.txtShortVal
                    }
                }
                $http(displayReq).then(function (Return)
                {
                 $scope.On_Clear();
                 if (Return.data == "Updated") {
                 $scope.Notification('success', 'Operation Completed', 'Update UOM');
                       }
              else {
                $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                   }
                }, function myError(Return)
                    {
                        $scope.On_Clear();
             $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
              });
            };
            //===============Get UOM ID==============
             $scope.GetUOMID = function () {
                 var displayReq =
                 {
                    method: "POST",
                    url: "/UOM/Get_UOMID",
                    data: {
                    }
                }
                $http(displayReq).then(function (Return) {

                    $scope.txtUOM_ID = Return.data;

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //=================Clear Function======================
            $scope.On_Clear = function () {
            $scope.txtUOM = '';
            $scope.Status = '0';
            $scope.txtShortVal = '';
            $scope.GetUOMID();

            $scope.CUSaveBtn = false;
            $scope.CUUpdateBtn = true;
            };
            $scope.OnLoad = function ()
            {
            $scope.CUSaveBtn = false;
            $scope.CUUpdateBtn = true;
            $scope.Status = '0';
            };
            $scope.OnLoad();
            $scope.GetUOMID();
        });


    </script>

}
