
@{
    ViewBag.Title = "TokenClose";
}

<div ng-app="RegistrationForm" ng-controller="Home">

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Patient Token Close</h4>
        </div>
        <div class="col-md-7 align-self-center">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Patient Token Close</li>
                </ol>
            </div>
        </div>
    </div>

    <!--row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div id="TknClsInfo" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myLargeModalLabel">Select Patient Info Related to Fee</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-7">

                                    </div>
                                    <div class="col-md-1">
                                        <label for="CompSearch">Search:</label>
                                    </div>
                                    <div class="col-md-4 form-material">
                                        <input type="text" class="form-control" id="UserSearch" ng-model="TxtTknClsSearch" />
                                    </div>
                                </div>
                                <div class="table-responsive-sm">
                                    <table class="table-sm table-hover table-bordered text-dark">
                                        <thead>
                                            <tr>
                                                <th>Token No</th>
                                                <th>Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in dtGetAll | filter:TxtTknClsSearch">
                                                <td><button ng-click="GetDataByID(item.TokenNo)" class="btn btn-link" data-dismiss="modal">{{item.TokenNo}}</button></td>
                                                <td>{{item.FullName}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <div class="card-header bg-info">
                    <h4 class="m-b-0 text-white">Token Close</h4>
                </div>
                <div class="card-body">
                    <form name="TokenCls">
                        <div class="form-body form-group">
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="TokenNo">Token No:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="TokenNo" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtTokenNo" maxlength="100" readonly />
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-info" alt="default" data-toggle="modal" data-target="#TknClsInfo" href="javascript:void(0)" ng-click="GetAllData()"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="RegNo">Reg No:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="RegNo" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtRegNo" readonly />
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="PatName">Patient Name:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="PatName" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtPatName" readonly />
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="TokenDate">Token Date:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="TokenDate" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtTokenDate" readonly />
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="Age">Age:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="Age" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtPatAge" maxlength="100" readonly />
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="Gender">Gender:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="Gender" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtGender" maxlength="100" readonly />
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="DocName">Doctor Name:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="DocName" class="form-control form-input-grey text-center font-weight-bold" ng-model="txtDocName" maxlength="100" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="tab-pane" id="Refund" role="tabpanel">
                        <!--row-->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Token Close Setup</h4>
                                        <hr />
                                        <div class="table-responsive text-nowrap" style="font-size:10px;height: 600px;">
                                            <table class="table table-striped table-bordered table-head-fixed table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Type ID</th>
                                                        <th>Total Amount</th>
                                                        <th>Discount Amount</th>
                                                        <th>Total Payable</th>
                                                        <th>Paid Amount</th>

                                                        <th>Refund Amount</th>
                                                        <th>Net Paid</th>
                                                        <th>Payable</th>
                                                        <th>Closed Amount</th>
                                                        <th>Pending Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="item in dtViewGetAll">
                                                        <td>{{item.TypeID}}</td>
                                                        <td class="text-md-right">{{item.TotalFee  | number:2}}</td>
                                                        <td class="text-md-right">{{item.Discount   | number:2}}</td>
                                                        <td class="text-md-right">{{item.TotalFee - item.Discount   | number:2}}</td>
                                                        <td class="text-md-right">{{item.PaidFee   | number:2}}</td>
                                                        <td class="text-md-right">{{item.Refund   | number:2}}</td>
                                                        <td class="text-md-right">{{item.TotalPaid   | number:2}}</td>
                                                        <td class="text-md-right">{{item.Bal   | number:2}}</td>
                                                        <td><input type="number" class="form-control form-input-grey text-right font-weight-bold" ng-model="item.NewPaid" ng-change="CalculateFee($index,item.NewPaid)"></td>
                                                        <td><input type="number" class="form-control form-input-grey text-right font-weight-bold" ng-model="item.NewBal" readonly></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Row -->
                    </div>
                    <div class="row p-t-20">
                        <div class="col-md-4"></div>
                        <div class="col-md-3"></div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <button ng-click="SaveClearance()" ng-hide="CUSaveBtn" ng-disabled="TokenCls.$invalid" class="btn btn-outline-success form-control"><i class="fa fa-check"></i>Token Close</button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <button ng-click="On_Clear()" class="btn btn-outline-warning form-control"><i class="icon-refresh"></i> Clear </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Row -->
</div>
@section scripts {

    <script>

        var RegistrationForm = angular.module("RegistrationForm", []);
        RegistrationForm.controller("Home", function ($scope, $http) {
            $scope.Notification = function (Type, Heading, Test) {
                //info, warning, success, error
                $.toast({
                    heading: Heading,
                    text: Test,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: Type,
                    hideAfter: 3500,
                    stack: 6
                });
            };
            //==============Display Patient Token All Data==============
            $scope.GetAllData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/TokenClose/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {
                    $scope.dtGetAll = angular.fromJson(Return.data);
                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //==============Patient Token Data Get By ID===================
            $scope.GetDataByID = function (ID) {
                var displayReq = {
                    method: "POST",
                    url: "/TokenClose/Get_databyid",
                    data: {
                        TokenNo: ID
                    }
                }
                $http(displayReq).then(function (Return) {
                    var dt = angular.fromJson(Return.data);
                    if (dt.length > 0) {
                        $scope.txtTokenNo = dt[0].TokenNo;
                        $scope.txtTokenDate = dt[0].TokenDate;
                        $scope.txtRegNo = dt[0].RegNo;
                        $scope.txtGender = dt[0].Gender;
                        $scope.txtPatAge = dt[0].Age;
                        $scope.txtPatCNIC = dt[0].CNIC;
                        $scope.txtPatName = dt[0].FullName;
                        $scope.txtDocName = dt[0].DoctorName;
                        $scope.GetViewAllData(dt[0].TokenNo);
                    }
                    else {
                        $scope.txtTokenNo = '';
                        $scope.txtTokenDate = '';
                        $scope.txtRegNo = '';
                        $scope.txtGender = '';
                        $scope.txtPatAge = '';
                        $scope.txtPatCNIC = '';
                        $scope.txtPatName = '';
                        $scope.txtDocName = '';
                    }

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //========Display Patient View All Data=====================
            $scope.GetViewAllData = function (TokenNo) {
                var displayReq = {
                    method: "POST",
                    url: "/TokenClose/Get_Viewdata",
                    data: {
                        TokenNo: TokenNo
                    }
                }
                $http(displayReq).then(function (Return) {

                    $scope.dtViewGetAll = angular.fromJson(Return.data);
                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //==============Calculate Fee=============
            $scope.CalculateFee = function (RowID,NewVal) {
                $scope.dtViewGetAll[RowID].NewPaid = NewVal;
                $scope.dtViewGetAll[RowID].NewBal = $scope.dtViewGetAll[RowID].Bal - $scope.dtViewGetAll[RowID].NewPaid;
            };
            //==============SAVE For Token Closing=============
            $scope.SaveClearance = function () {
                for (var i = 0; i < $scope.dtViewGetAll.length; i++) {
                    var displayReq = {
                        method: 'POST',
                        url: '/TokenClose/Add_Record',
                        data: {
                            TokenNo: $scope.txtTokenNo,
                            TotalAmount: $scope.dtViewGetAll[i].TotalFee,
                            PaidAmount: $scope.dtViewGetAll[i].PaidFee,
                            DiscountAmount: $scope.dtViewGetAll[i].Discount,
                            RefundAmount: $scope.dtViewGetAll[i].Refund,
                            NewPaid: $scope.dtViewGetAll[i].NewPaid,
                            NewBal: $scope.dtViewGetAll[i].NewBal,
                            PayableAmount: $scope.dtViewGetAll[i].Bal,
                            TypeID: $scope.dtViewGetAll[i].TypeID,
                            NetPaidAmount: $scope.dtViewGetAll[i].TotalPaid
                        }
                    }
                    $http(displayReq).then(function (Return) {
                        $scope.On_Clear();
                        if (Return.data == "Inserted") {
                            $scope.Notification('success', 'Operation Completed', 'Insert Patient Close');
                        }
                        else {
                            $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                        }
                        }, function myError(Return) {
                          $scope.On_Clear();
                          $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
                });
                }    
            };
            //================Clear Function===================
            $scope.On_Clear = function () {
                $scope.txtTokenNo = '';
                $scope.txtGender = '';
                $scope.txtPatAge = '';
                $scope.txtTokenDate = '';
                $scope.txtRegNo = '';
                $scope.txtPatName = '';
                $scope.txtDocName = '';
                //$scope.GetViewAllData('');
                $scope.dtViewGetAll = '';
                $scope.CUSaveBtn = false;
                $scope.CUUpdateBtn = true;
            };
            $scope.OnLoad = function () {
                $scope.CUSaveBtn = false;
                $scope.CUUpdateBtn = true;
            };
            $scope.OnLoad();
        });
    </script>

}


