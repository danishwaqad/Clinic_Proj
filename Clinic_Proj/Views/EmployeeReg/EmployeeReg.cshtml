                                    <label class="control-label text-dark" for="CnicIdentity">CNIC Identity:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="CnicIdentity" class="form-control form-input-grey" ng-model="txtCnicIdentity" />
                                </div>
                            </div>
