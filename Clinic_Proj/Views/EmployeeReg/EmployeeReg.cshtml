                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="EmpDob">DOB:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="date" id="EmpDob" class="form-control form-input-grey" ng-model="txtEmpDOB" required />
