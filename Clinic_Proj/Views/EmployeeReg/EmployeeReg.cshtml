</div>
@section scripts {
    <script>
        var RegistrationForm = angular.module("RegistrationForm", []);
        RegistrationForm.controller("Home", function ($scope, $http) {
            $scope.Notification = function (Type, Heading, Test) {
                //info, warning, success, error
                $.toast({
                    heading: Heading,
                    text: Test,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: Type,
                    hideAfter: 3500,
                    stack: 6
                });
            };
            $scope.getTel1Length = function () {
            $scope.length = '';
            if ($scope.txtEmpTel1 == undefined) {
                $scope.Notification('error', 'Error', 'Please Enter Valid Length Mobile # Format/923121234567');
            }
            else {
                //Nothing will do
            }
            var StartingString = $scope.txtEmpTel1.startsWith("92");
            $scope.length = $scope.txtEmpTel1.length;
            if ($scope.length == '10' && StartingString == false) {
                $scope.txtEmpTel1 = '92' + $scope.txtEmpTel1;
            }
            else if ($scope.length == '12' && StartingString == true) {
                $scope.txtEmpTel1 = $scope.txtEmpTel1;
            }
            else {
                $scope.txtEmpTel1 = '';
                $scope.Notification('error', 'Error', 'Please Enter Valid Length Mobile # Format/923121234567');
            }
        };
        $scope.getTel2Length = function () {
            $scope.length = '';
            if ($scope.txtEmpTel2 == undefined) {
                $scope.Notification('error', 'Error', 'Please Enter Valid Length Mobile # Format/923121234567');
            }
            else {
                //Nothing will do
            }
            var StartingString = $scope.txtEmpTel2.startsWith("92");
            $scope.length = $scope.txtEmpTel2.length;
            if ($scope.length == '10' && StartingString == false) {
                $scope.txtEmpTel2 = '92' + $scope.txtEmpTel2;
            }
            else if ($scope.length == '12' && StartingString == true) {
                $scope.txtEmpTel2 = $scope.txtEmpTel2;
            }
            else {
                $scope.txtEmpTel2 = '';
                $scope.Notification('error', 'Error', 'Please Enter Valid Length Mobile # Format/923121234567');
            }
        };
            //===========Display All Company Data by lookup=============
            $scope.GetAllData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/Company/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {

                    $scope.dtGetAll = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //===========Display All Employee Data by lookup=============
            $scope.GetEmpData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/EmployeeReg/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {
                    $scope.dtEmpGetAll = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //=============Employee Get Data By ID=================
            $scope.GetEmpDataByID = function (ID) {
                var displayReq = {
                    method: "POST",
                    url: "/EmployeeReg/Get_databyid",
                    data: {
                        EmpID: ID
                    }
                }
                $http(displayReq).then(function (Return) {
                    var dt = angular.fromJson(Return.data);
                    if (dt.length > 0) {
                        $scope.txtCompID = dt[0].CompanyID;
                        $scope.txtCompName = dt[0].CompanyName;
                        $scope.txtEmpID = dt[0].EmpID;
                        $scope.txtEmpCnic = dt[0].EmpCNIC;
                        $scope.txtCnicIssue = new Date(dt[0].CNICIssueDate);
                        $scope.txtCnicExp = new Date(dt[0].CNICExpiryDate);
                        $scope.DDLTitle = dt[0].Title;
                        $scope.txtFamilyNo = dt[0].FamilyNumber;
                        $scope.txtFname = dt[0].GuardianName;
                        $scope.txtFEmpName = dt[0].FirstName;
                        $scope.txtMEmpName = dt[0].MidName;
                        $scope.txtLEmpName = dt[0].LastName;
                        $scope.txtCnicIdentity = dt[0].CNICIdentity;
                        $scope.txtEmpReferBy = dt[0].ReferBy;
                        $scope.txtEmpDOB = new Date(dt[0].DOB);
                        $scope.txtEmpTel1 = dt[0].EmpTel1;
                        $scope.txtEmpTel2 = dt[0].EmpTel2;
                        $scope.txtAddress = dt[0].EmpAddress;
                        $scope.txtGender = dt[0].Gender;
                        $scope.txtCity = dt[0].EmpCity;
                        $scope.txtCountry = dt[0].EmpCountry;
                        $scope.txtEmpRemarks = dt[0].EmpRemarks;
                        $scope.txtEmpCompID = dt[0].EmpCompanyID;
                        $scope.txtEmpDept = dt[0].EmpDepartment;
                        $scope.txtEmpDesignation = dt[0].EmpDesignation;
                        $scope.txtEmpPayroll = dt[0].EmpPayroll;
                        $scope.txtEmpTyp = dt[0].EmpType;
                        if (dt[0].InActive == false) {
                            $scope.txtStatus = 'false';
                        }
                        else {
                            $scope.txtStatus = 'true';
                        }
                        $scope.txtRemarks = dt[0].Remarks;

                        $scope.CUSaveBtn = true;
                        $scope.CUUpdateBtn = false;
                    }
                    else {
                        $scope.CUSaveBtn = false;
                        $scope.CUUpdateBtn = true;

                        $scope.txtCompID = '';
                        $scope.txtCompName = '';
                        $scope.txtEmpID = '';
                        $scope.txtEmpName = '';
