@section scripts {

    <script>

        var RegistrationForm = angular.module("RegistrationForm", []);
        RegistrationForm.controller("Home", function ($scope, $http) {
            $scope.Notification = function (Type, Heading, Test) {
                //info, warning, success, error
                $.toast({
                    heading: Heading,
                    text: Test,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: Type,
                    hideAfter: 3500,
                    stack: 6
                });
            };
            //===========Get Height=============
            $scope.getHeight = function () {
                var Height, Centimeter, CmtoInches;
                Height = ($scope.TxtHeightFt * 12) + $scope.TxtHeightInch;
                Centimeter = Height * 2.54;
                CmtoInches = Centimeter / 2.54;
                $scope.TxtHeightResult = CmtoInches;
                //alert('CM to in' + CmtoInches);
                //$scope.getWeight();
            }
            //===========Get Weight=============
            $scope.getWeight = function () {
                var WeightInPound, BMI, Weight;
                Weight = $scope.TxtWeight;
                WeightInPound = Weight / 0.45359237;
                $scope.TxtWeightResult = WeightInPound;
                //alert('Weight' + WeightInPound);
                $scope.BMICalcu();
            }
            $scope.BMICalcu = function () {
                //alert(' cm' + CmtoInches, ' we' + WeightInPound);
                var W, H,HR,WR,BR;
                W = $scope.TxtWeightResult;
                H = $scope.TxtHeightResult;
                HR = H * H;
                WR = W / HR;
                BR = WR * 703;
                BMI = BR;
                //Example for BMI
                //BMI = Height 5 feet,10 inches=70inches,weight in LB 184
                //BMI = (184/70*70) * 703
                //BMI = (184/702) * 703
                //BMI = (184/4900) * 703
                //BMI = 0.3755 * 703
                //BMI = 26.4
                $scope.txtVitalValue = BMI.toFixed(2);
            }
            //===============Display All Data By Token Lookup=====================
            $scope.GetAllData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {
                    $scope.On_Clear();
                    $scope.dtGetAll = angular.fromJson(Return.data);
                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //=================Display View All Vital Data===================
            $scope.GetViewAllData = function (Token) {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/Get_Viewdata",
                    data: {
                        TokenNo : Token
                    }
                }
                $http(displayReq).then(function (Return) {

                    $scope.dtViewGetAll = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //==================Delete Vital Name And Value===============
            $scope.OnDelete = function () {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/OnDelete",
                    data: {
                        TokenNo: $scope.txtTokenNo,
                        VitalName:$scope.txtVitalName
                    }
                }
                $http(displayReq).then(function (Return) {
                    $scope.GetViewAllData($scope.txtTokenNo);
                    $scope.txtVitalName = '';
                    $scope.txtVitalValue = '';
                    $scope.Clear_BMI();
                    if (Return.data == "Delete") {
                        $scope.Notification('success', 'Operation Completed', 'Delete Patient Vital');
                    }
                    else {
                        $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                    }
                }, function myError(Return) {
                    $scope.On_Clear();
                    $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
                });
            };
           //===================View Vital Data Get By ID==========================
            $scope.GetViewDataByID = function (ID) {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/Get_Viewdatabyid",
                    data: {
                        id: ID
                    }
                }
                $http(displayReq).then(function (Return) {

                    var dt = angular.fromJson(Return.data);

                    if (dt.length > 0) {
                        $scope.txtTokenNo = dt[0].TokenNo;
                        $scope.txtVitalName= dt[0].VitalName;
                        $scope.txtTokenDate= dt[0].TokenDate;
                        $scope.txtRegNo = dt[0].RegNo;
                        $scope.txtPatCNIC = dt[0].PatCNIC;
                        $scope.txtPatName = dt[0].PatName;
                        $scope.txtVitalValue = dt[0].VitalValue;
                        if ($scope.txtVitalName == "BMI") {
                            $scope.BMICalculation = false;
                        }

                        $scope.CUSaveBtn = true;
                        $scope.CUUpdateBtn = false;
                    }
                    else {
                        $scope.CUSaveBtn = false;
                        $scope.CUUpdateBtn = true;

                        $scope.txtTokenNo= '';
                        $scope.txtVitalName= '';
                        $scope.txtTokenDate= '';
                        $scope.txtRegNo= '';
                        $scope.txtPatCNIC= '';
                        $scope.txtPatName= '';
                        $scope.txtVitalValue= '';
                    }

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //=============Patient Data Get By ID==========================
            $scope.GetDataByID = function (ID) {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/Get_databyid",
                    data: {
                        TokenNo: ID
                    }
                }
                $http(displayReq).then(function (Return) {

                    var dt = angular.fromJson(Return.data);

                    if (dt.length > 0) {
                        $scope.txtTokenNo= dt[0].TokenNo;
                        $scope.txtTokenDate = dt[0].TokenDate;
                        $scope.txtRegNo = dt[0].RegNo;
                        $scope.txtGender = dt[0].Gender;
                        $scope.txtPatAge = dt[0].Age;
                        $scope.txtPatCNIC= dt[0].CNIC;
                        $scope.txtPatName = dt[0].FullName;
                        $scope.txtDocName = dt[0].DoctorName;

                        $scope.GetViewAllData(dt[0].TokenNo);

                        var savupd = $scope.txtVitalName;
                        if (savupd == '')
                        {
                            $scope.CUSaveBtn = false;
                            $scope.CUUpdateBtn = true;
                        }
                        else if (savupd == null)
                        {
                            $scope.CUSaveBtn = false;
                            $scope.CUUpdateBtn = true;
                        }
                        else if (savupd == 0)
                        {
                            $scope.CUSaveBtn = false;
                            $scope.CUUpdateBtn = true;
                        }
                        else {
                        $scope.CUSaveBtn = true;
                        $scope.CUUpdateBtn = false;
                        }
                    }
                    else {
                        $scope.CUSaveBtn = false;
                        $scope.txtTokenNo = '';
                        $scope.txtVitalName = '';
                        $scope.txtTokenDate= '';
                        $scope.txtRegNo = '';
                        $scope.txtGender = '';
                        $scope.txtPatAge ='';
                        $scope.txtPatCNIC= '';
                        $scope.txtPatName= '';
                        $scope.txtDocName = '';
                    }

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //=============Insert Vital Data=======================
            $scope.savedata = function () {
                var displayReq = {
                    method: 'POST',
                    url: '/PatientVital/Add_Vital',
                    data: {
                        TokenNo:$scope.txtTokenNo,
                        VitalName:$scope.txtVitalName,
                        TokenDate:$scope.txtTokenDate,
                        PatCNIC:$scope.txtPatCNIC,
                        PatName:$scope.txtPatName,
                        VitalValue:$scope.txtVitalValue
                    }
                }
                $http(displayReq).then(function (Return) {
                $scope.txtVitalName = '';
                    $scope.txtVitalValue = '';
                    $scope.GetViewAllData($scope.txtTokenNo);
                    $scope.Clear_BMI();
              if (Return.data == "Inserted") {
              $scope.Notification('success', 'Operation Completed', 'Insert Patient Vital');
                       }
              else {
                $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                   }
                }, function myError(Return) {
                        $scope.On_Clear();
             $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
              });
            };
            //===============Update Vital Data==========================
            $scope.On_Update = function () {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/update_record",
                    data: {
                        TokenNo:$scope.txtTokenNo,
                        VitalName:$scope.txtVitalName,
                        TokenDate:$scope.txtTokenDate,
                        RegNo:$scope.txtRegNo,
                        PatCNIC:$scope.txtPatCNIC,
                        PatName:$scope.txtPatName,
                        VitalValue:$scope.txtVitalValue
                    }
                }
                $http(displayReq).then(function (Return)
                {
                 $scope.GetViewAllData($scope.txtTokenNo);
                  $scope.txtVitalName = '';
                    $scope.txtVitalValue = '';
                    $scope.Clear_BMI();
                 if (Return.data == "Updated") {
                 $scope.Notification('success', 'Operation Completed', 'Update Patient Vital');
                       }
              else {
                $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                   }
                }, function myError(Return)
                    {
                        $scope.On_Clear();
             $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
              });
            };
             $scope.GetVitalID = function () {
                var displayReq = {
                    method: "POST",
                    url: "/PatientVital/Get_VitalID",
                    data: {
                    }
                }
                $http(displayReq).then(function (Return) {

                    $scope.txtVitalId = Return.data;

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //=======================Get Vital List===============
            $scope.GetPatVital = function () {
            var displayReq = {
            method: "POST",
            url: "/PatientVital/Get_PatVitalNam",
            data: {
            }
            }
          $http(displayReq).then(function (Return) {
            $scope.txtVitalName = '';
              $scope.txtVitalValue = '';
              $scope.Clear_BMI();
            $scope.dtGetPatVital = angular.fromJson(Return.data);

            }, function myError(Return) {
            $scope.Notification('error', 'Error Code LC0001', Return.data);
            });
            };
            $scope.Clear_BMI = function()
            {
              $scope.BMICalculation = true;
              $scope.TxtHeightFt='';
              $scope.TxtHeightInch='';
              $scope.TxtWeight='';
              $scope.TxtWeightResult='';
              $scope.TxtHeightResult='';
            }
           //=============Get Vital By Name=====================
            $scope.GetpatVitalBy = function (VitalName)
            {

                $scope.txtVitalName = VitalName;
                if ($scope.txtVitalName == "BMI") {
                    $scope.BMICalculation = false;
                }
                $scope.CUSaveBtn = false;
                $scope.CUUpdateBtn = true;
            };
            //=================Clear Function=====================
            $scope.On_Clear = function () {
            $scope.txtTokenNo = '';
            $scope.txtGender = '';
            $scope.txtPatAge = '';
            $scope.txtVitalName= '';
            $scope.txtTokenDate= '';
            $scope.txtRegNo= '';
            $scope.txtPatCNIC= '';
            $scope.txtPatName = '';
            $scope.txtDocName = '';
            $scope.txtVitalValue =0;
            $scope.dtViewGetAll = '';
            $scope.BMICalculation = true;
            $scope.TxtHeightFt='';
