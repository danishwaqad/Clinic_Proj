
@{
    ViewBag.Title = "FreeCampSetup";
}

<div ng-app="RegistrationForm" ng-controller="Home">

    @*<div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Free Camp Discount</h4>
        </div>
        <div class="col-md-7 align-self-center">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Free Camp Discount</li>
                </ol>
            </div>
        </div>
    </div>*@

    <!--row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div id="DrName" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myLargeModalLabel">Select Doctor Name</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-7">

                                    </div>
                                    <div class="col-md-1">
                                        <label for="CompSearch">Search:</label>
                                    </div>
                                    <div class="col-md-4 form-material">
                                        <input type="text" class="form-control" id="UserSearch" ng-model="TxtDocSearch" />
                                    </div>
                                </div>
                                <div class="table-responsive-sm">
                                    <table class="table-sm table-hover table-bordered text-dark">
                                        <thead>
                                            <tr>
                                                <th>Dr Name</th>
                                                <th>Active</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in dtGetAll | filter:TxtDocSearch">
                                                <td><button ng-click="GetDataByID(item.DoctorID,item.SiteID)" class="btn btn-link" data-dismiss="modal">{{item.DoctorName}}</button></td>
                                                <td>{{item.Status}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <div id="UserModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="myLargeModalLabel">Select Site</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-7">

                                    </div>
                                    <div class="col-md-1">
                                        <label for="CompSearch">Search:</label>
                                    </div>
                                    <div class="col-md-4 form-material">
                                        <input type="text" class="form-control" id="UserSearch" ng-model="TxtSiteSearch" />
                                    </div>
                                </div>
                                <div class="table-responsive-sm">
                                    <table class="table-sm table-hover table-bordered text-dark">
                                        <thead>
                                            <tr>
                                                <th>Code</th>
                                                <th>Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in dtGetSiteAll | filter:TxtSiteSearch">
                                                <td><button ng-click="GetSiteDataByID(item.SiteCode)" class="btn btn-link" data-dismiss="modal">{{item.SiteCode}}</button></td>
                                                <td>{{item.SiteName}}</td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <div class="card-header bg-info">
                    <h4 class="m-b-0 text-white">Free Camp Setup</h4>
                </div>
                <div class="card-body">
                    <form name="FreeCampSetup">
                        <div class="form-body form-group">
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="DoctorID">DoctorID:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="DoctorID" class="form-control form-input-grey" ng-model="txtDoctorID" readonly />
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-info" alt="default" data-toggle="modal" data-target="#DrName" href="javascript:void(0)" ng-click="GetAllData()"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-md-1">
                                    <label class="control-label text-dark" for="txtStatus">Status:</label>
                                </div>
                                <div class="col-md-3">
                                    <select id="Status" ng-model="txtStatus" class="btn btn-outline-secondary dropdown-toggle form-control form-input-grey">
                                        <option value="false">Active</option>
                                        <option value="true">InActive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="DrName">Dr Name:</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="text" id="DrName" class="form-control form-input-grey" ng-model="txtDrName" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="SiteID">Site ID:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="SiteCode" class="form-control text-center font-weight-bold" ng-model="txtSiteCode" readonly required />

                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-info" alt="default" data-toggle="modal" data-target="#UserModal" href="javascript:void(0)" ng-click="GetSiteAllData()"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="Discount">Discount:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <select class="form-control form-input-grey" ng-model="DDLDisType" ng-disabled="DocDiscDisable">
                                            <option value="0">-Select-</option>
                                            <option value="%">%</option>
                                            <option value="Rs">Rs.</option>
                                        </select>
                                        <input type="number" id="Discount" class="form-control form-input-grey text-center font-weight-bold" value="0" ng-model="txtDiscount" />
                                    </div>
                                </div>
                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-1"></div>
                                <div class="col-sm-1">
                                    <label class="control-label text-dark" for="DisAprov">Approved By:</label>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" id="DisAprov" class="form-control form-input-grey" ng-model="txtDisAprov" />
                                    </div>
                                </div>

                            </div>
                            <div class="row p-t-20">
                                <div class="col-md-3"></div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button ng-click="savedata()" ng-disabled="FreeCampSetup.$invalid" class="btn btn-outline-success form-control"><i class="fa fa-check"></i>Save</button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button ng-click="On_Clear()" class="btn btn-outline-warning form-control"><i class="icon-refresh"></i> Clear </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button ng-disabled="FreeCampSetup.$invalid" ng-click="OnDelete()" class="btn btn-outline-danger form-control"><i class="icon-trash"></i>Delete</button>
                                    </div>
                                </div>
                                <div class="col-md-3"></div>
                            </div>
                            <div class="tab-pane" id="" role="tabpanel">
                                <!--row-->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Free Camp Detail</h4>
                                                <hr />
                                                <div class="col-md-12 scrollbar-secondary" style="overflow-x:auto;overflow-y:auto;height:600px; font-size:11px;">
                                                    <table class="table table-sm table-bordered table-head-fixed table-hover text-nowrap display">
                                                        <thead>
                                                            <tr>
                                                                <th>Sr #</th>
                                                                <th>Dr Name</th>
                                                                <th>Type</th>
                                                                <th>Approval</th>
                                                                <th>Discount</th>
                                                                <th>Site</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr ng-repeat="item in dtGetFreeCmp">
                                                                <td>{{$index + 1}}</td>
                                                                <td>{{item.DrName}}</td>
                                                                <td>{{item.DiscountType}}</td>
                                                                <td>{{item.DiscountApproval}}</td>
                                                                <td>{{item.Discount}}</td>
                                                                <td>{{item.SiteID}}</td>
                                                                <td>
                                                                    <button ng-click="OnDelete(item.CCPL_ROW_ID)" class="btn btn-xs btn-danger" alt="default" data-toggle="modal" data-target="#" href="javascript:void(0)"><i class="fa fa-trash"></i></button>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <hr />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Row -->
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {

    <script>

        var RegistrationForm = angular.module("RegistrationForm", []);
        RegistrationForm.controller("Home", function ($scope, $http) {
            $scope.Notification = function (Type, Heading, Test) {
                //info, warning, success, error
                $.toast({
                    heading: Heading,
                    text: Test,
                    position: 'top-right',
                    loaderBg: '#ff6849',
                    icon: Type,
                    hideAfter: 3500,
                    stack: 6
                });
            };
          //=============Display Doctor Data By LookUp=================
            $scope.GetAllData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/DoctorReg/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {
                    $scope.On_Clear();
                    $scope.dtGetAll = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //==============Doctor Data Get By ID=========================
            $scope.GetDataByID = function (Doctor,Site) {
                var displayReq = {
                    method: "POST",
                    url: "/DoctorReg/Get_databyid",
                    data: {
                        DoctorID: Doctor,
                        SiteID: Site
                    }
                }
                $http(displayReq).then(function (Return) {

                    var dt = angular.fromJson(Return.data);

                    if (dt.length > 0) {
                        $scope.txtDoctorID = dt[0].DoctorID;
                        $scope.txtDrName = dt[0].DoctorName;
                        $scope.txtSiteCode = dt[0].SiteID;
                    }
                    else {
                        $scope.txtDrName = '';
                        $scope.txtSiteCode = '';
                        $scope.txtDoctorID = '';
                    }

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //Display Free Camp Detail
            $scope.GetFreeCmp = function () {
                var displayReq = {
                    method: "POST",
                    url: "/FreeCamp/Get_FreeCmpdata",
                    data: {
                    }
                }
                $http(displayReq).then(function (Return) {
                    $scope.dtGetFreeCmp = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
           //==================Site Data Get By ID=======================
            $scope.GetSiteDataByID = function (ID) {
                var displayReq = {
                    method: "POST",
                    url: "/Site/Get_databyid",
                    data: {
                        SiteCode: ID
                    }
                }
                $http(displayReq).then(function (Return) {
                    var dt = angular.fromJson(Return.data);
                    if (dt.length > 0) {
                        $scope.txtSiteCode = dt[0].SiteCode;
                    }
                    else {
                        $scope.txtSiteCode = '';
                    }
                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //================Display DTall site data=====================
            $scope.GetSiteAllData = function () {
                var displayReq = {
                    method: "POST",
                    url: "/Site/Get_data",
                    data: {}
                }
                $http(displayReq).then(function (Return) {

                    $scope.dtGetSiteAll = angular.fromJson(Return.data);

                }, function myError(Return) {
                    $scope.Notification('error', 'Error Code LC0001', Return.data);
                });
            };
            //==========Free Camp Delete============
            $scope.OnDelete = function (ID) {
                var displayReq = {
                    method: "POST",
                    url: "/FreeCamp/OnDelete",
                    data: {
                        ID: ID
                    }
                }
                $http(displayReq).then(function (Return) {
                    $scope.On_Clear();
                    if (Return.data == "Delete") {
                        $scope.Notification('success', 'Operation Completed', 'Delete Free Camp Entry');
                    }
                    else {
                        $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                    }
                }, function myError(Return) {
                    $scope.On_Clear();
                    $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
                });
            };
            //===================Free Camp Entry Insert==============
            $scope.savedata = function () {
                var displayReq = {
                    method: 'POST',
                    url: '/FreeCamp/Add_FreeCmp_Recrd',
                    data: {
                        DoctorID: $scope.txtDoctorID,
                        Status: $scope.txtStatus,
                        DrName: $scope.txtDrName,
                        SiteCode: $scope.txtSiteCode,
                        DisType: $scope.DDLDisType,
                        DisAprov: $scope.txtDisAprov,
                        Discount: $scope.txtDiscount
                    }
                }
                $http(displayReq).then(function (Return) {
                    $scope.On_Clear();
                    if (Return.data == "Inserted") {
                        $scope.Notification('success', 'Operation Completed', 'Insert Free Camp Entry');
                    }
                    else {
                        $scope.Notification('error', 'Error Code CU1002', 'Please Contact to Admin');
                    }
                }, function myError(Return) {
                    $scope.On_Clear();
                    $scope.Notification('error', 'Error Code CU0002', 'Please Contact to Admin');
                });
            };
            //=================Clear Function=================
            $scope.On_Clear = function () {
                $scope.txtDoctorID = '';
                $scope.txtDrName = '';
                $scope.txtSiteCode = '';
                $scope.txtDiscount = '';
                $scope.txtDisAprov = '';
                $scope.DDLDisType = '0';
                $scope.txtStatus = 'false';
                $scope.GetFreeCmp();
            };
            $scope.OnLoad = function () {
                $scope.DDLDisType = '0';
                $scope.txtStatus = 'false';
                $scope.GetFreeCmp();
                $scope.txtDiscount = '0';
            };
            $scope.OnLoad();
        });
    </script>

}
